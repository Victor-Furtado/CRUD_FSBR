@model IEnumerable<CRUD_FSBR.Models.Processo>

@{
    ViewData["Title"] = "LIST";
    int currentPage = ViewBag.CurrentPage;
    int totalPages = ViewBag.TotalPages;
}

<h1>LISTA DE PROCESSOS</h1>

<p>
    <a asp-action="Create">NOVO PROCESSO</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>NPU</th>
            <th>CADASTRO</th>
            <th>UF</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Npu)</td>
                <td>@Html.DisplayFor(modelItem => item.CadastradoEm)</td>
                <td>@Html.DisplayFor(modelItem => item.UF)</td>
                <td>
                    <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.Id">👁️ DETALHES</a> |
                    <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.Id">✏️ EDITAR</a> |
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">🗑️ DELETAR</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    @if (totalPages > 1)
    {
        <nav aria-label="Page navigation">
            <ul class="pagination">
                @for (int i = 1; i <= totalPages; i++)
                {
                    <li class="page-item @(i == currentPage ? "active" : "")">
                        <a class="page-link" asp-action="Index" asp-route-page="@i">@i</a>
                    </li>
                }
            </ul>
        </nav>
    }
</div>
